#!/bin/bash

DIR="$(dirname "$0")"
. "${DIR}/config"

set -o errexit
set -o pipefail

# cloud run 
gcloud run deploy $ROOT_NAME \
	--no-allow-unauthenticated \
	--execution-environment=gen2 \
	--image $IMAGE_URI \
	--memory=2Gi \
	--platform managed \
	--timeout 15m \
	--region $REGION \
	--service-account $SA_EMAIL \
	--set-env-vars=PROJECT_ID=$PROJECT_ID,SIGN_KEY=$SIGN_KEY
